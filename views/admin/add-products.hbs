<div class="container mb-5" style="max-width: 800px;">
    <h4 class="my-3 shadow-sm p-3 text-center">Add new Product</h4>

    <form action="/admin/add-product" method="post" enctype="multipart/form-data">
        <div class="mb-3 mt-3">
            <label for="title" class="form-label">Product Title :</label>
            <input type="text" class="form-control" placeholder="Title..." name="prodTitle">
        </div>
        <div class="mb-3 mt-3">
            <label for="price" class="form-label">Product Price :</label>
            <input type="number" class="form-control" placeholder="Price..." name="prodPrice">
        </div>
        <div class="mb-3 mt-3">
            <label for="category" class="form-label">Product category :</label>
            <input type="text" class="form-control" placeholder="Category..." name="prodCategory">
        </div>
        <div class="mb-3 mt-3">
            <label for="description" class="form-label">Product Description :</label>
            <input type="text" class="form-control" placeholder="Description..." name="prodDescription">
        </div>
        <div class="mb-3 mt-3">
            <label for="description" class="form-label">Product Image :</label>
            <input type="file" class="form-control" placeholder="image" name="prodImage">
        </div>

        
        <button type="submit" class="btn btn-success">Submit</button>
    </form>
</div>