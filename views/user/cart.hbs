<div class="container" style="margin-bottom: 2rem; max-width: 1000px;">
    <h4 class="mb-4">Cart Items</h4>

    <table class="table">
        <thead>
          <tr>
            <th scope="col">No</th>
            <th scope="col">Item</th>
            <th scope="col">Image</th>
            <th scope="col">Price</th>
            <th scope="col">Count</th>
          </tr>
        </thead>
        <tbody>
       {{#each cartProducts}}
          <tr>
            <td>{{@index}}</td>
           
            <td>{{this.product.prodTitle}}</td>
            <td><img style="width: 50px;height: 50px;" src="/product-images/{{this.product._id}}.png" alt=""></td>
            <td>{{this.product.prodPrice}}</td>
           
            <td><button type="button" class="btn btn-info {{this.product._id}}"  onclick="changeQuantity('{{this._id}}','{{this.product._id}}',-1)">-</button>
            <span class="px-2" id="{{this.product._id}}">{{this.quantity}}</span>
            <button type="button" class="btn btn-info" onclick="changeQuantity('{{this._id}}','{{this.product._id}}',1)">+</button></td>
            <td>
                <button type="button" class="btn btn-danger me-2">Delete</button>
                <button type="button" class="btn btn-success">View</button>
            </td>
        </tr>
      {{/each}}    
          
        </tbody>
      </table>
</div> 

