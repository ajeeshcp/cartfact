   {{>general-header }}
<section  class="p-5 mt-3" id="viewproducts">
        <div class="row justify-content-md-center">
            {{#each products}}
                <div class="card col-xs-12   col-sm-6 col-md-4 col-lg-3 m-2 pt-2 " style="max-width: 18rem;">
                    <img style="height: 200px;" src="/product-images/{{this._id}}.png" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title  text-center">{{this.prodTitle}}</h5>
                        <h5 class="text-success">&#8377; PRICE : {{this.prodPrice}} </h5>
                        <p class="card-text" style=" text-align: justify">{{this.prodDescription}}</p>
                        <a href="/detailed-view/{{this._id}}" class="btn btn-primary me-2">View</a>
                        <button onclick="addToCart('{{this._id}}')"  class="btn btn-success">Add to cart</button>
                    </div>
                </div>
            {{/each}}
            

   
        </div>
    
</section>